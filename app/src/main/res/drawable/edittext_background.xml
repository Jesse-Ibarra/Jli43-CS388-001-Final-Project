<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/gray" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="@color/purple_500" />

    <!-- Corner radius -->
    <corners android:radius="8dp" />

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
